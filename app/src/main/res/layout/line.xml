<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/bg"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_line_stt"
        android:layout_width="51dp"
        android:layout_height="152dp"
        android:gravity="center_vertical"
        android:text="1"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_line_type"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_line_stt"
        app:layout_constraintStart_toEndOf="@+id/txt_line_stt"
        app:layout_constraintTop_toTopOf="@+id/txt_line_stt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_line_country"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_line_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_line_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_line_price" />

    <TextView
        android:id="@+id/txt_line_price"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_line_type"
        app:layout_constraintStart_toStartOf="@+id/txt_line_type"
        app:layout_constraintTop_toBottomOf="@+id/txt_line_type" />

    <Button
        android:id="@+id/btn_line_update"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Update"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txt_line_price"
        app:layout_constraintStart_toEndOf="@+id/txt_line_price"
        app:layout_constraintTop_toTopOf="@+id/txt_line_price" />

    <Button
        android:id="@+id/btn_line_delete"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Delete"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txt_line_country"
        app:layout_constraintStart_toEndOf="@+id/txt_line_country"
        app:layout_constraintTop_toTopOf="@+id/txt_line_country" />
</androidx.constraintlayout.widget.ConstraintLayout>